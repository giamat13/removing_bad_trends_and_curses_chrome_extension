{
  "manifest_version": 3,
  "name": "מסיר טרנדים גרועים וקללות",
  "version": "1.3.1",
  "description": "מצנזר את כל הטרנדים והקללות מהדפדפן, ניתן להגדרה",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage", "tabs"],
  "web_accessible_resources": [{
    "resources": ["block.json", "allow.json"],
    "matches": ["<all_urls>"]
  }]
}